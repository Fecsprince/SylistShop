<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sylist</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style type="text/css">
        body {
            font-family: Georgia, Cochin, Cambria, Times, Times New Roman, serif;
            background: url('/Content/Images/Barber.png') no-repeat fixed;
            background-size: cover;
            font-size: 16px;
        }

        #Homeindex {
            height: 450px;
            padding: 10px;
            margin: 10px;
            border: solid thin whitesmoke;
        }

        #bucket {
            padding: 10px;
            margin-top: 10px;
            background-color: whitesmoke;
            border-radius: 10px 10px;
            box-shadow: rgba(0,0,0,3) 10px 10px;
        }

        #guideBucket {
            padding: 2px 10px 5px 5px;
            margin-top: 10px;
            background-color: white;
            border-radius: 10px 10px;
            opacity: 0.9;
            text-align: justify;
        }

        footer {
            padding: 10px;
            margin: 10px;
            text-align: center;
            border-radius: 10px 10px;
            background-color: slategray;
            font-size: 18px;
            color: white;
        }

        thead {
            background-color: greenyellow;
            color: black;
        }

        th {
            text-align: center;
        }

        td {
            text-align: center;
        }

        thead {
            background-color: navy;
            color: white;
        }

        tfoot {
            background-color: darkblue;
            color: white;
            text-emphasis: filled;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sylist", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    @* @if (User.IsInRole("StoreManager, SuperAdmin"))*@
                    @* {*@

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Store Manager<b class="caret"></b></a>


                        <ul class="dropdown-menu">
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Product", "Index", "ProductManager")</li>
                            <li>@Html.ActionLink("Category", "Index", "ProductCategoryManager")</li>

                        </ul>
                    </li>

                    
                    @*  *@}

                    @* @if (User.IsInRole("SuperAdmin"))*@
                    @* {*@

                    @*  *@}

                    @* @if (User.IsInRole("ShopManager, SuperAdmin"))*@
                    @* {*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Shop Manager<b class="caret"></b></a>


                        <ul class="dropdown-menu">
                            <li class="divider"></li>
                            <li> <a href="@Url.Action("Index","ShopManager")">Shop Manager</a></li>
                            <li> <a href="@Url.Action("Index","ServiceManager")">Service</a></li>

                        </ul>
                    </li>
                    @*  *@}

                    @* @if (User.IsInRole("SuperAdmin"))*@
                    @* {*@

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Role Management<b class="caret"></b></a>

                        <ul class="dropdown-menu">
                            <li class="divider"></li>
                            <li><a href="@Url.Action("Index","Role")">Roles</a></li>
                            <li><a href="@Url.Action("Create","Role")">New Role</a></li>
                            <li><a href="@Url.Action("UserRoles","Role")">Users in Role</a></li>
                            <li><a href="@Url.Action("RoleAssignment","Role")">Assignment</a></li>



                        </ul>
                    </li>
                    @*  *@}





                </ul>
                @Html.Partial("_LoginPartial")
                @{
                    Html.RenderAction("BasketSummary", "Basket");
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sylist</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
