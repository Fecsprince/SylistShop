@model IEnumerable<MyShop.Core.Models.Service>

@{
    ViewBag.Title = "Index";
}


@if (ViewBag.msg != null)
{
    <p id="msg" style="display:none">@ViewBag.Msg</p>
}
<div id="bucket">
    <h2>Service Listing</h2>

    <a href="@Url.Action("Create","ServiceManager")" class="btn btn-primary">Add Service</a>
    <br />
    <br />

    <div class="table-responsive">
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShopID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img class="img-thumbnail" style="width:50px; height:50px" src="~/Content/ServiceImages/@item.Image1" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Shop.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a href="@Url.Action("Details","ServiceManager", new {@id = item.Id })" class="btn btn-success"><span class="glyphicon glyphicon-folder-open"></span> </a>
                        <a href="@Url.Action("Edit","ServiceManager", new {@id = item.Id })" class="btn btn-success"><span class="glyphicon glyphicon-pencil"></span> </a>
                        <a href="@Url.Action("Delete","ServiceManager", new {@id = item.Id })" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> </a>


                    </td>
                </tr>
            }

        </table>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    $(document).ready(function () {

        var Smsg = $("#msg").text();
        if (Smsg != "") {
            alert(Smsg);
        }
    });

</script>