@model MyShop.Core.Models.Service


@{
    ViewBag.Title = "Details";
}

@if (Model != null)
{

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3>@Model.Name</h3>
                </div>
                <div class="panel-body">

                    <div class="text-center">

                        <img class="img-rounded" src="~/Content/ServiceImages/@Model._Image1" width="150" height="150" />

                        <img class="img-rounded" src="~/Content/ServiceImages/@Model._Image2" width="150" height="150" />


                    </div>
                    <h4>Other Details</h4>
                    <h5>Created by</h5>
                    <p><b>@Model.ShopID</b></p>
                    <h5>Date Created</h5>
                    <p><b>@Model.CreatedAt</b></p>
                    <br />
                    <a href="@Url.Action("BookNow","ServiceBooking", new {Id=Model.Id})" class="btn btn-primary">Book Now</a>
                </div>

                <div class="panel-footer text-center">
                    <a href="@Url.Action("Edit","ServiceManager", new {@id = Model.Id })" class="btn btn-success"><span class="glyphicon glyphicon-pencil"></span> </a>
                    <a href="@Url.Action("Delete","ServiceManager", new {@id = Model.Id })" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> </a>
                </div>
            </div>
        </div>

    </div>




}



