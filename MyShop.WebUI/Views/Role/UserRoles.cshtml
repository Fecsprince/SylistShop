@model IEnumerable<MyShop.Core.Models.UserRoleModel>

@{
    ViewBag.Title = "Role Management";
}

<div id="bucket">
    <h2 id="guideBucket">Role Management</h2>

    <div class="table-responsive">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Role)
                </th>
                <th>Option</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.User)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>
                    <td>
                        <a href="@Url.Action("Delete","Role", new {@ID = item.UserId })" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> </a>

                    </td>
                </tr>
            }

        </table>
    </div>
</div>






