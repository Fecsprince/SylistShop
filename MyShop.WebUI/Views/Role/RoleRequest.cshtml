
@{
    ViewBag.Title = "Role Request";
}


<div id="bucket">
    <h2 id="guideBucket">Role Request</h2> 
    @using (Html.BeginForm("RoleRequest", "Role", FormMethod.Post))
    {
        <div class="form-group">
            <strong>Your Email:</strong> <input type="text" id="Email" name="Email" class="form-control" value="@ViewBag.Email" readonly="readonly" />
        </div>
        <div class="form-group">
            <strong>Select Role:</strong> @Html.DropDownList("Name", new SelectList(ViewBag.Roles,"Name","Name"), "Select Role", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" value="Submit Request" class="btn btn-primary" />
        </div>
    }
</div>


