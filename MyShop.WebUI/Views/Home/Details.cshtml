@model MyShop.Core.Models.Product

@{
    ViewBag.Title = Model.Name + " Details";
}


<div id="bucket">
    <div class="row">
        <h2 id="guideBucket">@Model.Name</h2>


        <hr />

        <div class="col-md-6">
            <div class="col-md-3">
                <img class="img-responsive center-block img-thumbnail" height="50" width="80" src="~/Content/ProductImages/@Model.Image1" />
            </div>
            <div class="col-md-3">
                <img class="img-responsive center-block img-thumbnail" height="50" width="80" src="~/Content/ProductImages/@Model.Image2" />
            </div>
        </div>

        <div class="col-md-6 col-sm-6">
            <dl class="dl-horizontal">



                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>

                <dd>
                    $@Html.DisplayFor(model => model.Price)
                </dd>

                <dt></dt>
                <dd><a href="@Url.Action("AddToBasket","Basket", new {Id =Model.Id})" class="btn btn-primary">Add to Basket</a></dd>

                <dt></dt>
                <dd> @Html.ActionLink("Back to List", "Index")</dd>
            </dl>
        </div>
    </div>
</div>



